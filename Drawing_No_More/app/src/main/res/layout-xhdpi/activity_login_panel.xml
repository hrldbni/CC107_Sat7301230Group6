<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backback"
    android:paddingTop="80dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="30dp"
    tools:context=".LoginPanel"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/radius">

            <TextView
                android:id="@+id/LoginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:text="LOG IN"
                android:textAlignment="center"
                android:textColor="#58E0BF"
                android:textSize="40dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailAddress"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/LoginText"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:background="@drawable/custom_input"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/email_logo"
                android:drawableLeft="@drawable/email_logo"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/emailAddress"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:background="@drawable/custom_input"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Password"

                android:inputType="textPassword" />

    <TextView
        android:id="@+id/forgotPasswordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Forgot Password" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userPassword"
            android:layout_marginTop="5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="LOG IN"
            android:background="@drawable/radius"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="330dp" />

        <TextView
        android:id="@+id/signUpNow"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:text="Click here to Sign Up"
        android:layout_alignParentBottom="true"
        android:clickable="true"
            android:textColor="@color/teal_200"
            android:padding="5dp"
        />
    </LinearLayout>
    </ScrollView>
</LinearLayout>