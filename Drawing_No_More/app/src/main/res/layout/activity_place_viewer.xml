<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:id="@+id/navContainer"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="45dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/design_default_color_on_primary">

        <ImageButton
            android:id="@+id/btnhome"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ripple"
            android:backgroundTint="#DDF0F3"
            android:scaleType="center"
            android:tint="@color/teal_200"
            app:srcCompat="@drawable/ic_baseline_search_24"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/btntravel"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ripple"
            android:scaleType="center"
            android:tint="@color/teal_200"
            app:srcCompat="@drawable/ic_baseline_airplanemode_active_24"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/btnprofile"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ripple"
            android:scaleType="center"
            android:tint="@color/teal_200"
            app:srcCompat="@drawable/ic_baseline_person_24"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/placeViewerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/imageViewer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:layout_weight="100"/>

        <TextView
            android:id="@+id/imageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Title Dito Master"
            android:gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />

        <TextView
            android:id="@+id/imageLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="15sp"
            android:drawableStart="@drawable/location"
            android:text="Location dito master" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <TextView
                    android:id="@+id/imageAbout"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="About Place"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    />

                <EditText
                    android:id="@+id/travelDate"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageAbout"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="211dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_calendar"
                    android:hint=" Set Date..."
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/travelFund"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/travelDate"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="-24dp"
                    android:layout_marginEnd="32dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_wallet"
                    android:hint=" Your Travel Fund..."
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/insertBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/travelFund"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="38dp"
                    android:layout_marginEnd="134dp"
                    android:text="Start Drawing" />


            </RelativeLayout>
        </ScrollView>
    </LinearLayout>



</RelativeLayout>