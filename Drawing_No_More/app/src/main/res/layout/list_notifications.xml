<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/notificationImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="0dp"
                android:scaleType="centerCrop"
                android:background="@drawable/radiyus"
                android:src="@drawable/notiforange"/>
            <TextView
                android:id="@+id/notificationTitle"
                android:textColor="#262626"
                android:layout_toRightOf="@+id/notificationImg"
                android:text="Place Title"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/notificationsAbout"
                android:textColor="#d3d3d3"
                android:text="Place Location"
                android:layout_toRightOf="@+id/notificationImg"
                android:layout_below="@id/notificationTitle"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/notificationDate"
        android:textColor="#d3d3d3"
        android:text="Place Location"
        android:layout_toRightOf="@+id/notificationImg"
        android:layout_below="@id/notificationsAbout"
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>