<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/backCont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_alignParentLeft="true"
            android:background="@color/white"
            android:paddingLeft="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_baseline_person_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:text="Profile"
            android:layout_toRightOf="@+id/backBtn"
            style="@style/TextAppearance.AppCompat.Large"
            android:paddingLeft="13dp"
            android:paddingRight="15dp"
            android:textColor="@color/purple_700"
            android:gravity="center|left"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/prof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="?actionBarSize"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginBottom="?actionBarSize"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/profact"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:orientation="vertical"/>


        <LinearLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/profile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/travelhistory">

                        </ImageView>

                        <TextView
                            android:id="@+id/txtprofile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/profile"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="2dp"
                            android:text="Travel List"
                            android:textColor="@color/purple_700"
                            android:textSize="16sp"
                            android:textStyle="bold">

                        </TextView>

                        <Button
                            android:id="@+id/btnprofile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent">

                        </Button>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/rute"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/searchtravel">

                        </ImageView>

                        <TextView
                            android:id="@+id/txtrute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rute"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="2dp"
                            android:text="Explore"
                            android:textColor="@color/purple_700"
                            android:textSize="16sp"
                            android:textStyle="bold">

                        </TextView>

                        <Button
                            android:id="@+id/btnrout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent">

                        </Button>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/history"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/invite">

                        </ImageView>

                        <TextView
                            android:id="@+id/txthistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/history"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="2dp"
                            android:text="My Invitation"
                            android:textColor="@color/purple_700"
                            android:textSize="16sp"
                            android:textStyle="bold">

                        </TextView>

                        <Button
                            android:id="@+id/btnhistory"
                            android:layout_width="182dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent">

                        </Button>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/feedback"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/wishlist">

                        </ImageView>

                        <TextView
                            android:id="@+id/txtfeedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/feedback"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="2dp"
                            android:text="Wishlist Destination"
                            android:textColor="@color/purple_700"
                            android:textSize="16sp"
                            android:textStyle="bold">

                        </TextView>

                        <Button
                            android:id="@+id/btnfeedbak"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent">

                        </Button>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="16dp">


            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttonstylewithgradient"
                android:text="LOG OUT"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/changePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:text="Change Password"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>