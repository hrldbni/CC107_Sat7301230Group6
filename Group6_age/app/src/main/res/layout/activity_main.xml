<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name :"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAllCaps="true"
        />
    <EditText
        android:id="@+id/lastNameText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lastName"
        android:layout_marginTop="65dp"
        android:textSize="15dp"
        android:paddingLeft="6dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name :"
        android:layout_below="@+id/lastName"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAllCaps="true"
        />

    <EditText
        android:id="@+id/firstNameText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/firstName"
        android:layout_below="@id/lastNameText"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:paddingLeft="6dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth :"
        android:layout_below="@+id/firstName"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAllCaps="true"
        />

    <EditText
        android:id="@+id/dobText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dob"
        android:layout_below="@id/firstNameText"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:paddingLeft="6dp"
        android:enabled="false"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <ImageButton
        android:id="@+id/calendarBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@id/dobText"
        android:layout_below="@id/firstNameText"
        android:src="@drawable/calendar_icon"
        />
    <Button
        android:id="@+id/computeAgeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compute Age"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/calendarBtn"
        />

</RelativeLayout>